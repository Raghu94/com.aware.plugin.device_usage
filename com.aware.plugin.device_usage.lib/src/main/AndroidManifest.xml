<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aware.plugin.device_usage.lib">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">

        <service
            android:label="AWARE: Device Usage"
            android:name="com.aware.plugin.device_usage.lib.Plugin"
            android:exported="true" />

        <provider
            android:name="com.aware.plugin.device_usage.lib.Provider"
            android:authorities="${applicationId}.provider.device_usage"
            android:exported="true"
            android:readPermission="com.aware.READ_CONTEXT_DATA"
            android:writePermission="com.aware.WRITE_CONTEXT_DATA" />

        <activity
            android:name="com.aware.plugin.device_usage.lib.Settings"
            android:exported="true" />

    </application>

</manifest>
